                "responses": {
                    "204": {
                        "description": "No Body content."
                    },
                    "404": {
                        "description": "Not Found",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "notFound": {
                                        "value": {
                                            "message": "Client not found."
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/contacts": {
            "post": {},
            "get": {}
        },
        "/contacts:id": {
            "get": {},
            "patch": {},
            "delete": {}
        }
    },
