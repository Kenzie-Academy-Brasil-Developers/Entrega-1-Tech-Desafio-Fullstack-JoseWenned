        "/clients/:id": {
            "get": {
                "description": "Route responsible for reading only one client.",
                "tags": ["Route only accessed with admin token."],
                "parameters": [{
                    "schema": {
                        "type": "number"
                    },
                    "in": "query",
                    "description": "Id of the client you want to search.",
                    "name": "id"
                }
            ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                },
                                "examples": {
                                    "response": {
                                        "value": {
                                            "id": 6,
                                            "full_name": "Silva Neto Noia",
                                            "email": "silva@gmail.com",
