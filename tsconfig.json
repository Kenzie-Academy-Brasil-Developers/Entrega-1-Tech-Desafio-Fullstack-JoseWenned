{
    "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "typeRoots": ["node_modules/@types"],
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "esModuleInterop": true,
      "exactOptionalPropertyTypes": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }